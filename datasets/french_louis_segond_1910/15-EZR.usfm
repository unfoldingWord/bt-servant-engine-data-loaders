\v 12  \w Artaxerxès|strong="H783"\w*, \w roi|strong="H4430"\w* des \w rois|strong="H4430"\w*, à \w Esdras|strong="H5831"\w*, \w sacrificateur|strong="H3549"\w* et \w scribe|strong="H5613"\w*, versé dans la \w loi|strong="H1882"\w* du \w Dieu|strong="H426"\w* des \w cieux|strong="H8065"\w*, etc. 
\v 13  \w J|strong="H4481"\w*'ai \w donné|strong="H7761" x-morph="strongMorph:TH8752"\w* \w ordre|strong="H2942"\w* de laisser \w aller|strong="H1946" x-morph="strongMorph:TH8748"\w* \w tous|strong="H3606"\w* ceux \w du|strong="H4481"\w* \w peuple|strong="H5972"\w* d'\w Israël|strong="H3479"\w*, de ses \w sacrificateurs|strong="H3549"\w* et de ses \w Lévites|strong="H3879"\w*, qui se trouvent dans mon \w royaume|strong="H4437"\w*, et qui sont \w disposés|strong="H5069" x-morph="strongMorph:TH8723"\w* à \w partir|strong="H1946" x-morph="strongMorph:TH8749"\w* avec \w toi|strong="H5974"\w* pour \w Jérusalem|strong="H3390"\w*. 

\s5
\v 14  \w |strong="H6903"\w*\w |strong="H3606"\w* Tu es \w envoyé|strong="H7972" x-morph="strongMorph:TH8750"\w* \w par|strong="H4481"\w*\w |strong="H6925"\w* le \w roi|strong="H4430"\w* et ses \w sept|strong="H7655"\w* \w conseillers|strong="H3272" x-morph="strongMorph:TH8750"\w* pour \w inspecter|strong="H1240" x-morph="strongMorph:TH8742"\w*\w |strong="H5922"\w* \w Juda|strong="H3061"\w* et \w Jérusalem|strong="H3390"\w* d'après la \w loi|strong="H1882"\w* de ton \w Dieu|strong="H426"\w*, laquelle est entre tes \w mains|strong="H3028"\w*, 
\v 15 et pour \w porter|strong="H2987" x-morph="strongMorph:TH8682"\w* l'\w argent|strong="H3702"\w* et l'\w or|strong="H1722"\w* que le \w roi|strong="H4430"\w* et ses \w conseillers|strong="H3272" x-morph="strongMorph:TH8750"\w* ont généreusement \w offerts|strong="H5069" x-morph="strongMorph:TH8724"\w* au \w Dieu|strong="H426"\w* d'\w Israël|strong="H3479"\w*, \w dont|strong="H1768"\w* la \w demeure|strong="H4907"\w* est à \w Jérusalem|strong="H3390"\w*, 
\v 16  \w tout|strong="H3606"\w* l'\w argent|strong="H3702"\w* et l'\w or|strong="H1722"\w* que tu \w trouveras|strong="H7912" x-morph="strongMorph:TH8681"\w* dans \w toute|strong="H3606"\w* la \w province|strong="H4083"\w* de \w Babylone|strong="H895"\w*, \w et|strong="H5974"\w* les dons \w volontaires|strong="H5069" x-morph="strongMorph:TH8722"\w*\w |strong="H5069" x-morph="strongMorph:TH8723"\w* faits par le \w peuple|strong="H5972"\w* et les \w sacrificateurs|strong="H3549"\w* pour la \w maison|strong="H1005"\w* de leur \w Dieu|strong="H426"\w* à \w Jérusalem|strong="H3390"\w*. 

\s5
\v 17 En \w conséquence|strong="H3606"\w*\w |strong="H6903"\w*, tu auras \w soin|strong="H629"\w* d'\w acheter|strong="H7066" x-morph="strongMorph:TH8748"\w* avec \w cet|strong="H1836"\w* \w argent|strong="H3702"\w* des \w taureaux|strong="H8450"\w*, des \w béliers|strong="H1798"\w*, des \w agneaux|strong="H563"\w*, et ce qui est nécessaire pour les \w offrandes|strong="H4504"\w* et les \w libations|strong="H5261"\w*, et tu \w les|strong="H1994"\w* \w offriras|strong="H7127" x-morph="strongMorph:TH8741"\w* \w sur|strong="H5922"\w* l'\w autel|strong="H4056"\w* de la \w maison|strong="H1005"\w* de votre \w Dieu|strong="H426"\w* à \w Jérusalem|strong="H3390"\w*. 
\v 18 Vous \w ferez|strong="H5648" x-morph="strongMorph:TH8748"\w* avec le \w reste|strong="H7606"\w* de l'\w argent|strong="H3702"\w* et de l'\w or|strong="H1722"\w* \w ce|strong="H4101"\w*\w |strong="H1768"\w* que vous jugerez \w bon|strong="H3191" x-morph="strongMorph:TH8748"\w* de \w faire|strong="H5648" x-morph="strongMorph:TH8749"\w*, toi et \w tes|strong="H5922"\w* \w frères|strong="H252"\w*, en vous conformant à la \w volonté|strong="H7470"\w* de votre \w Dieu|strong="H426"\w*. 

\s5
\v 19  \w Dépose|strong="H8000" x-morph="strongMorph:TH8680"\w* \w devant|strong="H6925"\w* le \w Dieu|strong="H426"\w* de \w Jérusalem|strong="H3390"\w* les \w ustensiles|strong="H3984"\w* qui te sont \w remis|strong="H3052" x-morph="strongMorph:TH8727"\w* pour le \w service|strong="H6402"\w* de la \w maison|strong="H1005"\w* de ton \w Dieu|strong="H426"\w*. 
\v 20 Tu \w tireras|strong="H5415" x-morph="strongMorph:TH8748"\w* \w de|strong="H4481"\w* la \w maison|strong="H1005"\w* des \w trésors|strong="H1596"\w* du \w roi|strong="H4430"\w* ce qu'il \w faudra|strong="H2819"\w* pour les \w autres|strong="H7606"\w* dépenses que tu auras à \w faire|strong="H5308" x-morph="strongMorph:TH8748"\w*\w |strong="H5415" x-morph="strongMorph:TH8749"\w* concernant la \w maison|strong="H1005"\w* de ton \w Dieu|strong="H426"\w*. 

\s5
\v 21  \w Moi|strong="H576"\w*,\w |strong="H4481"\w* le \w roi|strong="H4430"\w* \w Artaxerxès|strong="H783"\w*, je \w donne|strong="H7761" x-morph="strongMorph:TH8752"\w* l'\w ordre|strong="H2942"\w* à \w tous|strong="H3606"\w* les \w trésoriers|strong="H1490"\w* de l'autre \w côté|strong="H5675"\w* du \w fleuve|strong="H5103"\w* de \w livrer|strong="H5648" x-morph="strongMorph:TH8725"\w* \w exactement|strong="H629"\w* à \w Esdras|strong="H5831"\w*, \w sacrificateur|strong="H3549"\w* et \w scribe|strong="H5613"\w*, versé dans la \w loi|strong="H1882"\w* du \w Dieu|strong="H426"\w* des \w cieux|strong="H8065"\w*, tout ce qu'il vous \w demandera|strong="H7593" x-morph="strongMorph:TH8748"\w*, 
\v 22 jusqu'\w à|strong="H5705"\w* \w cent|strong="H3969"\w* \w talents|strong="H3604"\w* d'\w argent|strong="H3702"\w*, \w cent|strong="H3969"\w* \w cors|strong="H3734"\w* de \w froment|strong="H2591"\w*, \w cent|strong="H3969"\w* \w baths|strong="H1325"\w* de \w vin|strong="H2562"\w*, \w cent|strong="H3969"\w* \w baths|strong="H1325"\w* d'\w huile|strong="H4887"\w*, et du \w sel|strong="H4416"\w* à \w discrétion|strong="H3809"\w*\w |strong="H3792"\w*. 
\v 23 Que \w tout|strong="H3606"\w* ce qui est \w ordonné|strong="H2941"\w* \w par|strong="H4481"\w* le \w Dieu|strong="H426"\w* des \w cieux|strong="H8065"\w* se \w fasse|strong="H5648" x-morph="strongMorph:TH8725"\w* \w ponctuellement|strong="H149"\w* pour la \w maison|strong="H1005"\w* du \w Dieu|strong="H426"\w* des \w cieux|strong="H8065"\w*, \w afin|strong="H1768"\w*\w |strong="H4101"\w* que sa \w colère|strong="H1934" x-morph="strongMorph:TH8748"\w*\w |strong="H7109"\w* ne soit pas \w sur|strong="H5922"\w* le \w royaume|strong="H4437"\w*, sur le \w roi|strong="H4430"\w* et sur ses \w fils|strong="H1123"\w*. 

\s5
\v 24 Nous vous faisons \w savoir|strong="H3046" x-morph="strongMorph:TH8683"\w* qu'il ne \w peut|strong="H3809"\w*\w |strong="H7990"\w* être \w levé|strong="H7412" x-morph="strongMorph:TH8749"\w* ni \w tribut|strong="H4061"\w*, ni \w impôt|strong="H1093"\w*, ni droit de \w passage|strong="H1983"\w*, \w sur|strong="H5922"\w* \w aucun|strong="H3606"\w* des \w sacrificateurs|strong="H3549"\w*, des \w Lévites|strong="H3879"\w*, des \w chantres|strong="H2171"\w*, des \w portiers|strong="H8652"\w*, des \w Néthiniens|strong="H5412"\w*, et des \w serviteurs|strong="H6399" x-morph="strongMorph:TH8750"\w* de \w cette|strong="H1836"\w* \w maison|strong="H1005"\w* de \w Dieu|strong="H426"\w*. 

\s5
\v 25 Et \w toi|strong="H607"\w*, \w Esdras|strong="H5831"\w*, selon la \w sagesse|strong="H2452"\w* de \w Dieu|strong="H426"\w* que tu \w possèdes|strong="H3028"\w*, \w établis|strong="H4483" x-morph="strongMorph:TH8740"\w* des \w juges|strong="H1782"\w* et des \w magistrats|strong="H8200" x-morph="strongMorph:TH8751"\w* qui rendent la \w justice|strong="H1934" x-morph="strongMorph:TH8748"\w*\w |strong="H1778" x-morph="strongMorph:TH8751"\w* à \w tout|strong="H3606"\w* le \w peuple|strong="H5972"\w* de l'autre \w côté|strong="H5675"\w* du \w fleuve|strong="H5103"\w*, à \w tous|strong="H3606"\w* ceux qui \w connaissent|strong="H3046" x-morph="strongMorph:TH8751"\w* les \w lois|strong="H1882"\w* de ton \w Dieu|strong="H426"\w*; et fais-les \w connaître|strong="H3046" x-morph="strongMorph:TH8681"\w* à ceux qui ne les \w connaissent|strong="H3046" x-morph="strongMorph:TH8751"\w* \w pas|strong="H3809"\w*. 
\v 26  \w Quiconque|strong="H3606"\w* n'\w observera|strong="H1934" x-morph="strongMorph:TH8748"\w*\w |strong="H5648" x-morph="strongMorph:TH8751"\w* \w pas|strong="H3809"\w* \w ponctuellement|strong="H629"\w* la \w loi|strong="H1882"\w* de ton \w Dieu|strong="H426"\w* et la \w loi|strong="H1882"\w* du \w roi|strong="H4430"\w* sera \w condamné|strong="H1780"\w*\w |strong="H1934" x-morph="strongMorph:TH8748"\w*\w |strong="H5648" x-morph="strongMorph:TH8727"\w*\w |strong="H4481"\w* \w à|strong="H2006"\w* la \w mort|strong="H4193"\w*,\w |strong="H2006"\w* au \w bannissement|strong="H8332"\w*,\w |strong="H2006"\w* à une \w amende|strong="H6065"\w*\w |strong="H5232"\w*, ou à la \w prison|strong="H613"\w*. 

\s5
\v 27  \w Béni|strong="H1288" x-morph="strongMorph:TH8803"\w* soit l'\w Éternel|strong="H3068"\w*, le \w Dieu|strong="H430"\w* de nos \w pères|strong="H1"\w*, qui a \w disposé|strong="H5414" x-morph="strongMorph:TH8804"\w* le \w coeur|strong="H3820"\w* du \w roi|strong="H4428"\w* à \w glorifier|strong="H6286" x-morph="strongMorph:TH8763"\w* ainsi la \w maison|strong="H1004"\w* de l'\w Éternel|strong="H3068"\w* à \w Jérusalem|strong="H3389"\w*, 
\v 28 et qui m'a rendu l'\w objet|strong="H5186" x-morph="strongMorph:TH8689"\w* de la \w bienveillance|strong="H2617"\w* \w du|strong="H6440"\w* \w roi|strong="H4428"\w*, de ses \w conseillers|strong="H3289" x-morph="strongMorph:TH8802"\w*, et de tous ses \w puissants|strong="H1368"\w* \w chefs|strong="H8269"\w*! \w Fortifié|strong="H2388" x-morph="strongMorph:TH8694"\w* par la \w main|strong="H3027"\w* de l'\w Éternel|strong="H3068"\w*, mon \w Dieu|strong="H430"\w*, qui était sur moi, j'ai \w rassemblé|strong="H6908" x-morph="strongMorph:TH8799"\w* les \w chefs|strong="H7218"\w* d'\w Israël|strong="H3478"\w*, afin qu'ils \w partissent|strong="H5927" x-morph="strongMorph:TH8800"\w* avec moi. 

\s5
\c 8  
\p
