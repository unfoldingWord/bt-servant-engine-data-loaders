\s5
\c 1  
\p
\v 1 La \w troisième|strong="H7969"\w* \w année|strong="H8141"\w* du \w règne|strong="H4438"\w* de \w Jojakim|strong="H3079"\w*, \w roi|strong="H4428"\w* de \w Juda|strong="H3063"\w*, \w Nebucadnetsar|strong="H5019"\w*, \w roi|strong="H4428"\w* de \w Babylone|strong="H894"\w*, \w marcha|strong="H935" x-morph="strongMorph:TH8804"\w* contre \w Jérusalem|strong="H3389"\w*, et l'\w assiégea|strong="H6696" x-morph="strongMorph:TH8799"\w*. 
\v 2 Le \w Seigneur|strong="H136"\w* \w livra|strong="H5414" x-morph="strongMorph:TH8799"\w* entre ses \w mains|strong="H3027"\w* \w Jojakim|strong="H3079"\w*, \w roi|strong="H4428"\w* de \w Juda|strong="H3063"\w*, et une \w partie|strong="H7117"\w* des \w ustensiles|strong="H3627"\w* de la \w maison|strong="H1004"\w* de \w Dieu|strong="H430"\w*. Nebucadnetsar \w emporta|strong="H935" x-morph="strongMorph:TH8686"\w* les \w ustensiles|strong="H3627"\w* au \w pays|strong="H776"\w* de \w Schinear|strong="H8152"\w*, dans la \w maison|strong="H1004"\w* de son \w dieu|strong="H430"\w*, il les \w mit|strong="H935" x-morph="strongMorph:TH8689"\w* dans la \w maison|strong="H1004"\w* du \w trésor|strong="H214"\w* de son \w dieu|strong="H430"\w*. 

\s5
\v 3 Le \w roi|strong="H4428"\w* donna l'\w ordre|strong="H559" x-morph="strongMorph:TH8799"\w* à \w Aschpenaz|strong="H828"\w*, \w chef|strong="H7227"\w* de ses \w eunuques|strong="H5631"\w*, d'\w amener|strong="H935" x-morph="strongMorph:TH8687"\w* quelques-uns des \w enfants|strong="H1121"\w* d'\w Israël|strong="H3478"\w* de \w race|strong="H2233"\w* \w royale|strong="H4410"\w* ou de famille \w noble|strong="H6579"\w*, 
\v 4 de jeunes \w garçons|strong="H3206"\w* sans défaut \w corporel|strong="H3971" x-morph="strongMorph:TH8675"\w*\w |strong="H3971"\w*, \w beaux|strong="H2896"\w* de \w figure|strong="H4758"\w*, \w doués|strong="H7919" x-morph="strongMorph:TH8688"\w* de \w sagesse|strong="H2451"\w*,\w |strong="H3045" x-morph="strongMorph:TH8802"\w* d'\w intelligence|strong="H1847"\w* et d'\w instruction|strong="H995" x-morph="strongMorph:TH8688"\w*\w |strong="H4093"\w*, \w capables|strong="H3581"\w* de \w servir|strong="H5975" x-morph="strongMorph:TH8800"\w* dans le \w palais|strong="H1964"\w* du \w roi|strong="H4428"\w*, et à qui l'on \w enseignerait|strong="H3925" x-morph="strongMorph:TH8763"\w* les \w lettres|strong="H5612"\w* et la \w langue|strong="H3956"\w* des \w Chaldéens|strong="H3778"\w*. 
\v 5 Le \w roi|strong="H4428"\w* leur \w assigna|strong="H4487" x-morph="strongMorph:TH8762"\w* pour chaque \w jour|strong="H3117"\w* une \w portion|strong="H1697"\w* des \w mets|strong="H6598"\w* de \w sa|strong="H4428"\w* table et du \w vin|strong="H3196"\w* dont il \w buvait|strong="H4960"\w*, voulant les \w élever|strong="H1431" x-morph="strongMorph:TH8763"\w* pendant \w trois|strong="H7969"\w* \w années|strong="H8141"\w*, au \w bout|strong="H7117"\w* desquelles ils seraient au \w service|strong="H5975" x-morph="strongMorph:TH8799"\w*\w |strong="H6440"\w* du \w roi|strong="H4428"\w*. 

\s5
\v 6 Il y avait parmi eux, d'entre les \w enfants|strong="H1121"\w* de \w Juda|strong="H3063"\w*, \w Daniel|strong="H1840"\w*, \w Hanania|strong="H2608"\w*, \w Mischaël|strong="H4332"\w* et \w Azaria|strong="H5838"\w*. 
\v 7 Le \w chef|strong="H8269"\w* des \w eunuques|strong="H5631"\w* leur \w donna|strong="H7760" x-morph="strongMorph:TH8799"\w* des \w noms|strong="H8034"\w*,\w |strong="H7760" x-morph="strongMorph:TH8799"\w* à \w Daniel|strong="H1840"\w* celui de \w Beltschatsar|strong="H1095"\w*, à \w Hanania|strong="H2608"\w* celui de \w Schadrac|strong="H7714"\w*, à \w Mischaël|strong="H4332"\w* celui de \w Méschac|strong="H4335"\w*, et à \w Azaria|strong="H5838"\w* celui d'Abed-\w Nego|strong="H5664"\w*. 

\s5
\v 8  \w Daniel|strong="H1840"\w* \w résolut|strong="H7760" x-morph="strongMorph:TH8799"\w*\w |strong="H3820"\w* de ne pas se \w souiller|strong="H1351" x-morph="strongMorph:TH8691"\w* par les \w mets|strong="H6598"\w* du \w roi|strong="H4428"\w* et par le \w vin|strong="H3196"\w* dont le roi \w buvait|strong="H4960"\w*, et il \w pria|strong="H1245" x-morph="strongMorph:TH8762"\w* le \w chef|strong="H8269"\w* des \w eunuques|strong="H5631"\w* de ne pas l'obliger à se \w souiller|strong="H1351" x-morph="strongMorph:TH8691"\w*. 
\v 9  \w Dieu|strong="H430"\w* fit \w trouver|strong="H5414" x-morph="strongMorph:TH8799"\w* à \w Daniel|strong="H1840"\w* \w faveur|strong="H2617"\w* et \w grâce|strong="H7356"\w* \w devant|strong="H6440"\w* le \w chef|strong="H8269"\w* des \w eunuques|strong="H5631"\w*. 
\v 10 Le \w chef|strong="H8269"\w* des \w eunuques|strong="H5631"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* à \w Daniel|strong="H1840"\w*: Je \w crains|strong="H3373"\w* mon \w seigneur|strong="H113"\w* le \w roi|strong="H4428"\w*, qui a \w fixé|strong="H4487" x-morph="strongMorph:TH8765"\w* ce que vous devez \w manger|strong="H3978"\w* et \w boire|strong="H4960"\w*; car pourquoi \w verrait|strong="H7200" x-morph="strongMorph:TH8799"\w*-il votre \w visage|strong="H6440"\w* plus \w abattu|strong="H2196" x-morph="strongMorph:TH8802"\w* que celui des jeunes \w gens|strong="H3206"\w* de votre \w âge|strong="H1524"\w*? Vous \w exposeriez|strong="H2325" x-morph="strongMorph:TH8765"\w* ma \w tête|strong="H7218"\w* auprès du \w roi|strong="H4428"\w*. 

\s5
\v 11 Alors \w Daniel|strong="H1840"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* à l'\w intendant|strong="H4453"\w* à qui le \w chef|strong="H8269"\w* des \w eunuques|strong="H5631"\w* avait remis la \w surveillance|strong="H4487" x-morph="strongMorph:TH8765"\w* de \w Daniel|strong="H1840"\w*, de \w Hanania|strong="H2608"\w*, de \w Mischaël|strong="H4332"\w* et d'\w Azaria|strong="H5838"\w*: 
\v 12  \w Éprouve|strong="H5254" x-morph="strongMorph:TH8761"\w* tes \w serviteurs|strong="H5650"\w* pendant \w dix|strong="H6235"\w* \w jours|strong="H3117"\w*, et qu'on nous \w donne|strong="H5414" x-morph="strongMorph:TH8799"\w* des \w légumes|strong="H2235"\w* à \w manger|strong="H398" x-morph="strongMorph:TH8799"\w* et de l'\w eau|strong="H4325"\w* à \w boire|strong="H8354" x-morph="strongMorph:TH8799"\w*; 
\v 13 tu \w regarderas|strong="H7200" x-morph="strongMorph:TH8735"\w* ensuite notre \w visage|strong="H4758"\w*\w |strong="H6440"\w* et \w celui|strong="H4758"\w* des jeunes \w gens|strong="H3206"\w* qui \w mangent|strong="H398" x-morph="strongMorph:TH8802"\w* les \w mets|strong="H6598"\w* du \w roi|strong="H4428"\w*, et tu \w agiras|strong="H6213" x-morph="strongMorph:TH8798"\w* avec tes \w serviteurs|strong="H5650"\w* d'après ce que tu auras \w vu|strong="H7200" x-morph="strongMorph:TH8799"\w*. 

\s5
\v 14 Il leur \w accorda|strong="H8085" x-morph="strongMorph:TH8799"\w* ce qu'ils \w demandaient|strong="H1697"\w*, et les \w éprouva|strong="H5254" x-morph="strongMorph:TH8762"\w* pendant \w dix|strong="H6235"\w* \w jours|strong="H3117"\w*. 
\v 15 Au \w bout|strong="H7117"\w* de \w dix|strong="H6235"\w* \w jours|strong="H3117"\w*, ils \w avaient|strong="H7200" x-morph="strongMorph:TH8738"\w* \w meilleur|strong="H2896"\w* \w visage|strong="H4758"\w* et plus d'\w embonpoint|strong="H1277"\w*\w |strong="H1320"\w* que tous les jeunes \w gens|strong="H3206"\w* qui \w mangeaient|strong="H398" x-morph="strongMorph:TH8802"\w* les \w mets|strong="H6598"\w* du \w roi|strong="H4428"\w*. 
\v 16 L'\w intendant|strong="H4453"\w* \w emportait|strong="H5375" x-morph="strongMorph:TH8802"\w* les \w mets|strong="H6598"\w* et le \w vin|strong="H3196"\w* qui leur étaient \w destinés|strong="H4960"\w*, et il leur \w donnait|strong="H5414" x-morph="strongMorph:TH8802"\w* des \w légumes|strong="H2235"\w*. 

\s5
\v 17  \w Dieu|strong="H430"\w* \w accorda|strong="H5414" x-morph="strongMorph:TH8804"\w* à ces \w quatre|strong="H702"\w* jeunes \w gens|strong="H3206"\w* de la \w science|strong="H4093"\w*, de l'\w intelligence|strong="H7919" x-morph="strongMorph:TH8687"\w* dans toutes les \w lettres|strong="H5612"\w*, et de la \w sagesse|strong="H2451"\w*; et \w Daniel|strong="H1840"\w* \w expliquait|strong="H995" x-morph="strongMorph:TH8689"\w* toutes les \w visions|strong="H2377"\w* et tous les \w songes|strong="H2472"\w*. 
\v 18 Au terme \w fixé|strong="H7117"\w*\w |strong="H3117"\w*\w |strong="H559" x-morph="strongMorph:TH8804"\w* par le \w roi|strong="H4428"\w* pour qu'on les lui \w amenât|strong="H935" x-morph="strongMorph:TH8687"\w*, le \w chef|strong="H8269"\w* des \w eunuques|strong="H5631"\w* les \w présenta|strong="H935" x-morph="strongMorph:TH8686"\w* \w à|strong="H6440"\w* \w Nebucadnetsar|strong="H5019"\w*. 

\s5
\v 19 Le \w roi|strong="H4428"\w* s'\w entretint|strong="H1696" x-morph="strongMorph:TH8762"\w* avec eux; et, parmi tous ces jeunes gens, il ne s'en \w trouva|strong="H4672" x-morph="strongMorph:TH8738"\w* aucun comme \w Daniel|strong="H1840"\w*, \w Hanania|strong="H2608"\w*, \w Mischaël|strong="H4332"\w* et \w Azaria|strong="H5838"\w*. Ils furent donc admis au \w service|strong="H5975" x-morph="strongMorph:TH8799"\w*\w |strong="H6440"\w* du \w roi|strong="H4428"\w*. 
\v 20 Sur tous les \w objets|strong="H1697"\w* qui réclamaient de la \w sagesse|strong="H2451"\w* et de l'\w intelligence|strong="H998"\w*, et sur lesquels le \w roi|strong="H4428"\w* les \w interrogeait|strong="H1245" x-morph="strongMorph:TH8765"\w*, il les \w trouvait|strong="H4672" x-morph="strongMorph:TH8799"\w* dix \w fois|strong="H6235"\w* \w supérieurs|strong="H3027"\w* à tous les \w magiciens|strong="H2748"\w* et \w astrologues|strong="H825"\w* qui étaient dans tout son \w royaume|strong="H4438"\w*. 
\v 21 Ainsi fut \w Daniel|strong="H1840"\w* jusqu'à la \w première|strong="H259"\w* \w année|strong="H8141"\w* du \w roi|strong="H4428"\w* \w Cyrus|strong="H3566"\w*. 

\s5
\c 2  
\p
\v 1 La \w seconde|strong="H8147"\w* \w année|strong="H8141"\w* du \w règne|strong="H4438"\w* de \w Nebucadnetsar|strong="H5019"\w*, \w Nebucadnetsar|strong="H5019"\w* \w eut|strong="H2492" x-morph="strongMorph:TH8804"\w* des \w songes|strong="H2472"\w*. Il avait l'\w esprit|strong="H7307"\w* \w agité|strong="H6470" x-morph="strongMorph:TH8691"\w*, et ne \w pouvait|strong="H1961" x-morph="strongMorph:TH8738"\w* \w dormir|strong="H8142"\w*. 
\v 2 Le \w roi|strong="H4428"\w* \w fit|strong="H559" x-morph="strongMorph:TH8799"\w* \w appeler|strong="H7121" x-morph="strongMorph:TH8800"\w* les \w magiciens|strong="H2748"\w*, les \w astrologues|strong="H825"\w*, les \w enchanteurs|strong="H3784" x-morph="strongMorph:TH8764"\w* et les \w Chaldéens|strong="H3778"\w*, pour qu'ils \w lui|strong="H4428"\w* \w disent|strong="H5046" x-morph="strongMorph:TH8687"\w* ses \w songes|strong="H2472"\w*. Ils \w vinrent|strong="H935" x-morph="strongMorph:TH8799"\w*, et se \w présentèrent|strong="H5975" x-morph="strongMorph:TH8799"\w* \w devant|strong="H6440"\w* le \w roi|strong="H4428"\w*. 

\s5
\v 3 Le \w roi|strong="H4428"\w* leur \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: J'ai \w eu|strong="H2492" x-morph="strongMorph:TH8804"\w* un \w songe|strong="H2472"\w*; mon \w esprit|strong="H7307"\w* est \w agité|strong="H6470" x-morph="strongMorph:TH8735"\w*, et je voudrais \w connaître|strong="H3045" x-morph="strongMorph:TH8800"\w* ce \w songe|strong="H2472"\w*. 
\v 4 Les \w Chaldéens|strong="H3778"\w* \w répondirent|strong="H1696" x-morph="strongMorph:TH8762"\w* au \w roi|strong="H4428"\w* en langue \w araméenne|strong="H762"\w*: O \w roi|strong="H4430"\w*, \w vis|strong="H2418" x-morph="strongMorph:TH8747"\w* \w éternellement|strong="H5957"\w*! \w dis|strong="H560" x-morph="strongMorph:TH8747"\w* le \w songe|strong="H2493"\w* à tes \w serviteurs|strong="H5649"\w*, et nous en \w donnerons|strong="H2324" x-morph="strongMorph:TH8741"\w* l'\w explication|strong="H6591"\w*. 

\s5
\v 5 Le \w roi|strong="H4430"\w* \w reprit|strong="H6032" x-morph="strongMorph:TH8750"\w* la parole et \w dit|strong="H560" x-morph="strongMorph:TH8750"\w* aux \w Chaldéens|strong="H3779"\w*: La \w chose|strong="H4406"\w* \w m|strong="H4481"\w*'a \w échappé|strong="H230" x-morph="strongMorph:TH8754"\w*; \w si|strong="H2006"\w* vous ne me faites \w connaître|strong="H3046" x-morph="strongMorph:TH8681"\w*\w |strong="H3809"\w* le \w songe|strong="H2493"\w* et son \w explication|strong="H6591"\w*, vous serez \w mis|strong="H5648" x-morph="strongMorph:TH8725"\w* en \w pièces|strong="H1917"\w*, et vos \w maisons|strong="H1005"\w* seront \w réduites|strong="H7761" x-morph="strongMorph:TH8725"\w* en un tas d'\w immondices|strong="H5122"\w*. 
\v 6 Mais \w si|strong="H2006"\w* vous me \w dites|strong="H2324" x-morph="strongMorph:TH8681"\w* le \w songe|strong="H2493"\w* et son \w explication|strong="H6591"\w*, vous \w recevrez|strong="H6902" x-morph="strongMorph:TH8741"\w* de \w moi|strong="H4481"\w*\w |strong="H6925"\w* des \w dons|strong="H4978"\w* et des \w présents|strong="H5023"\w*, et de \w grands|strong="H7690"\w* \w honneurs|strong="H3367"\w*. C'est \w pourquoi|strong="H3861"\w* \w dites|strong="H2324" x-morph="strongMorph:TH8680"\w*-moi le \w songe|strong="H2493"\w* et son \w explication|strong="H6591"\w*. 

\s5
\v 7 Ils \w répondirent|strong="H6032" x-morph="strongMorph:TH8754"\w*\w |strong="H560" x-morph="strongMorph:TH8750"\w* pour la \w seconde|strong="H8579"\w* fois: Que le \w roi|strong="H4430"\w* \w dise|strong="H560" x-morph="strongMorph:TH8748"\w* le \w songe|strong="H2493"\w* à ses \w serviteurs|strong="H5649"\w*, et nous en \w donnerons|strong="H2324" x-morph="strongMorph:TH8681"\w* l'\w explication|strong="H6591"\w*. 
\v 8 Le \w roi|strong="H4430"\w* reprit la \w parole|strong="H6032" x-morph="strongMorph:TH8750"\w* et \w dit|strong="H560" x-morph="strongMorph:TH8750"\w*\w |strong="H4481"\w*: \w Je|strong="H576"\w* m'\w aperçois|strong="H3046" x-morph="strongMorph:TH8751"\w*, en \w vérité|strong="H3330"\w*, que \w vous|strong="H608"\w* voulez \w gagner|strong="H2084" x-morph="strongMorph:TH8750"\w* du \w temps|strong="H5732"\w*, parce \w que|strong="H6903"\w*\w |strong="H3606"\w* vous \w voyez|strong="H2370" x-morph="strongMorph:TH8754"\w* que la \w chose|strong="H4406"\w* m'a \w échappé|strong="H4481"\w*\w |strong="H230" x-morph="strongMorph:TH8754"\w*. 
\v 9  \w Si|strong="H2006"\w* donc vous ne me faites \w pas|strong="H3809"\w* \w connaître|strong="H3046" x-morph="strongMorph:TH8681"\w* le \w songe|strong="H2493"\w*, la \w même|strong="H1932"\w*\w |strong="H2298"\w* \w sentence|strong="H1882"\w* vous enveloppera tous; vous voulez vous \w préparer|strong="H2164" x-morph="strongMorph:TH8724"\w* à \w me|strong="H6925"\w* \w dire|strong="H560" x-morph="strongMorph:TH8749"\w* des \w mensonges|strong="H3538"\w* et des \w faussetés|strong="H7844" x-morph="strongMorph:TH8752"\w*\w |strong="H4406"\w*, en \w attendant|strong="H5705"\w* que les \w temps|strong="H5732"\w* soient \w changés|strong="H8133" x-morph="strongMorph:TH8721"\w*. C'est \w pourquoi|strong="H3861"\w* \w dites|strong="H560" x-morph="strongMorph:TH8747"\w*-moi le \w songe|strong="H2493"\w*, et je \w saurai|strong="H3046" x-morph="strongMorph:TH8748"\w* si vous êtes \w capables|strong="H1768"\w* de m'en \w donner|strong="H2324" x-morph="strongMorph:TH8681"\w* l'\w explication|strong="H6591"\w*. 

\s5
\v 10 Les \w Chaldéens|strong="H3779"\w* \w répondirent|strong="H6032" x-morph="strongMorph:TH8754"\w*\w |strong="H560" x-morph="strongMorph:TH8750"\w* \w au|strong="H6925"\w* \w roi|strong="H4430"\w*: Il n'\w est|strong="H383"\w* \w personne|strong="H3809"\w*\w |strong="H606"\w* \w sur|strong="H5922"\w* la \w terre|strong="H3007"\w* qui \w puisse|strong="H3202" x-morph="strongMorph:TH8748"\w* \w dire|strong="H2324" x-morph="strongMorph:TH8682"\w* \w ce|strong="H4406"\w* que demande le \w roi|strong="H4430"\w*; \w aussi|strong="H6903"\w*\w |strong="H1768"\w* \w jamais|strong="H3809"\w* \w roi|strong="H4430"\w*, quelque \w grand|strong="H7229"\w* et \w puissant|strong="H7990"\w* qu'il ait été, n'a \w exigé|strong="H7593" x-morph="strongMorph:TH8754"\w* une \w pareille|strong="H1836"\w* \w chose|strong="H4406"\w* d'\w aucun|strong="H3606"\w* \w magicien|strong="H2749"\w*, \w astrologue|strong="H826"\w* ou \w Chaldéen|strong="H3779"\w*. 
\v 11 Ce que le \w roi|strong="H4430"\w* \w demande|strong="H7593" x-morph="strongMorph:TH8751"\w* est \w difficile|strong="H3358"\w*\w |strong="H4406"\w*; il n'y \w a|strong="H383"\w* \w personne|strong="H3809"\w*\w |strong="H321"\w* qui puisse le \w dire|strong="H2324" x-morph="strongMorph:TH8741"\w* \w au|strong="H6925"\w* \w roi|strong="H4430"\w*, \w excepté|strong="H3861"\w* les \w dieux|strong="H426"\w*, dont la \w demeure|strong="H4070"\w* n'\w est|strong="H383"\w* \w pas|strong="H3809"\w* \w parmi|strong="H5974"\w* les \w hommes|strong="H1321"\w*. 

\s5
\v 12 Là-\w dessus|strong="H6903"\w*\w |strong="H1836"\w*\w |strong="H3606"\w* le \w roi|strong="H4430"\w* se mit en \w colère|strong="H1149" x-morph="strongMorph:TH8754"\w*, et s'\w irrita|strong="H7108" x-morph="strongMorph:TH8754"\w* \w violemment|strong="H7690"\w*. Il \w ordonna|strong="H560" x-morph="strongMorph:TH8754"\w* qu'on fasse \w périr|strong="H7" x-morph="strongMorph:TH8682"\w* \w tous|strong="H3606"\w* les \w sages|strong="H2445"\w* de \w Babylone|strong="H895"\w*. 
\v 13 La \w sentence|strong="H1882"\w* fut \w publiée|strong="H5312" x-morph="strongMorph:TH8754"\w*, les \w sages|strong="H2445"\w* étaient mis à \w mort|strong="H6992" x-morph="strongMorph:TH8726"\w*, et l'on \w cherchait|strong="H1156" x-morph="strongMorph:TH8754"\w* \w Daniel|strong="H1841"\w* et ses \w compagnons|strong="H2269"\w* pour les faire \w périr|strong="H6992" x-morph="strongMorph:TH8723"\w*. 

