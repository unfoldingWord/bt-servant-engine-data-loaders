\s5
\c 8  
\p
\v 1 La \w troisième|strong="H7969"\w* \w année|strong="H8141"\w* du \w règne|strong="H4438"\w* du \w roi|strong="H4428"\w* \w Belschatsar|strong="H1112"\w*, moi, \w Daniel|strong="H1840"\w*, j'\w eus|strong="H7200" x-morph="strongMorph:TH8738"\w* une \w vision|strong="H2377"\w*, \w outre|strong="H310"\w* celle que j'avais \w eue|strong="H7200" x-morph="strongMorph:TH8738"\w* \w précédemment|strong="H8462"\w*. 
\v 2 Lorsque j'\w eus|strong="H7200" x-morph="strongMorph:TH8799"\w* cette \w vision|strong="H2377"\w*, il me \w sembla|strong="H7200" x-morph="strongMorph:TH8800"\w* que j'étais à \w Suse|strong="H7800"\w*, la \w capitale|strong="H1002"\w*, dans la \w province|strong="H4082"\w* d'\w Élam|strong="H5867"\w*; et \w pendant|strong="H7200" x-morph="strongMorph:TH8799"\w* ma \w vision|strong="H2377"\w*, je me trouvais près du \w fleuve|strong="H180"\w* d'\w Ulaï|strong="H195"\w*. 

\s5
\v 3 Je \w levai|strong="H5375" x-morph="strongMorph:TH8799"\w* les \w yeux|strong="H5869"\w*, je \w regardai|strong="H7200" x-morph="strongMorph:TH8799"\w*, et voici, \w un|strong="H259"\w* \w bélier|strong="H352"\w* se \w tenait|strong="H5975" x-morph="strongMorph:TH8802"\w* \w devant|strong="H6440"\w* le \w fleuve|strong="H180"\w*, et il avait des \w cornes|strong="H7161"\w*; ces \w cornes|strong="H7161"\w* étaient \w hautes|strong="H1364"\w*, mais l'\w une|strong="H259"\w* était plus \w haute|strong="H1364"\w* que l'\w autre|strong="H8145"\w*, et \w elle|strong="H1364"\w* s'\w éleva|strong="H5927" x-morph="strongMorph:TH8802"\w* la \w dernière|strong="H314"\w*. 
\v 4 Je \w vis|strong="H7200" x-morph="strongMorph:TH8804"\w* le \w bélier|strong="H352"\w* qui \w frappait|strong="H5055" x-morph="strongMorph:TH8764"\w* de ses cornes à l'\w occident|strong="H3220"\w*, au \w septentrion|strong="H6828"\w* et au \w midi|strong="H5045"\w*; aucun \w animal|strong="H2416"\w* ne pouvait lui \w résister|strong="H5975" x-morph="strongMorph:TH8799"\w*\w |strong="H6440"\w*, et il n'y avait personne pour \w délivrer|strong="H5337" x-morph="strongMorph:TH8688"\w*\w |strong="H3027"\w* ses victimes; il \w faisait|strong="H6213" x-morph="strongMorph:TH8804"\w* ce qu'il \w voulait|strong="H7522"\w*, et il devint \w puissant|strong="H1431" x-morph="strongMorph:TH8689"\w*. 

\s5
\v 5 Comme je regardais \w attentivement|strong="H995" x-morph="strongMorph:TH8688"\w*, voici, un \w bouc|strong="H5795"\w*\w |strong="H6842"\w* \w venait|strong="H935" x-morph="strongMorph:TH8802"\w* de l'\w occident|strong="H4628"\w*, et \w parcourait|strong="H6440"\w* toute la \w terre|strong="H776"\w* à sa \w surface|strong="H776"\w*, sans la \w toucher|strong="H5060" x-morph="strongMorph:TH8802"\w*; ce \w bouc|strong="H6842"\w* avait une \w grande|strong="H2380"\w* \w corne|strong="H7161"\w* entre les \w yeux|strong="H5869"\w*. 
\v 6 Il \w arriva|strong="H935" x-morph="strongMorph:TH8799"\w* jusqu'au \w bélier|strong="H352"\w* qui \w avait|strong="H1167"\w* des \w cornes|strong="H7161"\w*, et que j'avais \w vu|strong="H7200" x-morph="strongMorph:TH8804"\w* se \w tenant|strong="H5975" x-morph="strongMorph:TH8802"\w* \w devant|strong="H6440"\w* le \w fleuve|strong="H180"\w*, et il \w courut|strong="H7323" x-morph="strongMorph:TH8799"\w* sur lui dans toute sa \w fureur|strong="H2534"\w*\w |strong="H3581"\w*. 

\s5
\v 7 Je le \w vis|strong="H7200" x-morph="strongMorph:TH8804"\w* qui s'\w approchait|strong="H5060" x-morph="strongMorph:TH8688"\w*\w |strong="H681"\w* du \w bélier|strong="H352"\w* et s'\w irritait|strong="H4843" x-morph="strongMorph:TH8698"\w* contre lui; il \w frappa|strong="H5221" x-morph="strongMorph:TH8686"\w* le \w bélier|strong="H352"\w* et lui \w brisa|strong="H7665" x-morph="strongMorph:TH8762"\w* les \w deux|strong="H8147"\w* \w cornes|strong="H7161"\w*, sans que le \w bélier|strong="H352"\w* eût la \w force|strong="H3581"\w* de lui \w résister|strong="H5975" x-morph="strongMorph:TH8800"\w*\w |strong="H6440"\w*; il le \w jeta|strong="H7993" x-morph="strongMorph:TH8686"\w* par \w terre|strong="H776"\w* et le \w foula|strong="H7429" x-morph="strongMorph:TH8799"\w*, et il n'y eut personne pour \w délivrer|strong="H5337" x-morph="strongMorph:TH8688"\w*\w |strong="H3027"\w* le \w bélier|strong="H352"\w*. 
\v 8 Le \w bouc|strong="H6842"\w*\w |strong="H5795"\w* devint \w très|strong="H3966"\w* \w puissant|strong="H1431" x-morph="strongMorph:TH8689"\w*; mais lorsqu'il fut \w puissant|strong="H6105" x-morph="strongMorph:TH8800"\w*, sa \w grande|strong="H1419"\w* \w corne|strong="H7161"\w* se \w brisa|strong="H7665" x-morph="strongMorph:TH8738"\w*. \w Quatre|strong="H702"\w* \w grandes|strong="H2380"\w* cornes s'\w élevèrent|strong="H5927" x-morph="strongMorph:TH8799"\w* pour la remplacer, aux \w quatre|strong="H702"\w* \w vents|strong="H7307"\w* des \w cieux|strong="H8064"\w*. 

\s5
