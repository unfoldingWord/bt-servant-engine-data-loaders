\c 4  
\p
\v 1  \w Mardochée|strong="H4782"\w*, ayant \w appris|strong="H3045" x-morph="strongMorph:TH8804"\w* tout ce qui se \w passait|strong="H6213" x-morph="strongMorph:TH8738"\w*,\w |strong="H4782"\w* \w déchira|strong="H7167" x-morph="strongMorph:TH8799"\w* ses \w vêtements|strong="H899"\w*, s'\w enveloppa|strong="H3847" x-morph="strongMorph:TH8799"\w* d'un \w sac|strong="H8242"\w* et se couvrit de \w cendre|strong="H665"\w*. Puis il \w alla|strong="H3318" x-morph="strongMorph:TH8799"\w* au \w milieu|strong="H8432"\w* de la \w ville|strong="H5892"\w* en \w poussant|strong="H2199" x-morph="strongMorph:TH8799"\w* avec \w force|strong="H1419"\w* des \w cris|strong="H2201"\w* \w amers|strong="H4751"\w*, 
\v 2 et se \w rendit|strong="H935" x-morph="strongMorph:TH8799"\w* jusqu'\w à|strong="H6440"\w* la \w porte|strong="H8179"\w* du \w roi|strong="H4428"\w*, dont l'\w entrée|strong="H8179"\w*\w |strong="H4428"\w* était \w interdite|strong="H935" x-morph="strongMorph:TH8800"\w* à toute personne \w revêtue|strong="H3830"\w* d'un \w sac|strong="H8242"\w*. 
\v 3 Dans chaque \w province|strong="H4082"\w*, \w partout|strong="H4725"\w* où \w arrivaient|strong="H5060" x-morph="strongMorph:TH8688"\w* l'\w ordre|strong="H1697"\w* du \w roi|strong="H4428"\w* et son \w édit|strong="H1881"\w*, il y eut une \w grande|strong="H1419"\w* \w désolation|strong="H60"\w* parmi les \w Juifs|strong="H3064"\w*; ils \w jeûnaient|strong="H6685"\w*, \w pleuraient|strong="H1065"\w* et se \w lamentaient|strong="H4553"\w*, et \w beaucoup|strong="H7227"\w* se \w couchaient|strong="H3331" x-morph="strongMorph:TH8714"\w* sur le \w sac|strong="H8242"\w* et la \w cendre|strong="H665"\w*. 

\s5
\v 4 Les \w servantes|strong="H5291"\w* d'\w Esther|strong="H635"\w* et ses \w eunuques|strong="H5631"\w* \w vinrent|strong="H935" x-morph="strongMorph:TH8799"\w* lui \w annoncer|strong="H5046" x-morph="strongMorph:TH8686"\w* cela, et la \w reine|strong="H4436"\w* fut \w très|strong="H3966"\w* \w effrayée|strong="H2342" x-morph="strongMorph:TH8698"\w*. Elle \w envoya|strong="H7971" x-morph="strongMorph:TH8799"\w* des \w vêtements|strong="H899"\w* à \w Mardochée|strong="H4782"\w* pour le \w couvrir|strong="H3847" x-morph="strongMorph:TH8687"\w* et lui faire \w ôter|strong="H5493" x-morph="strongMorph:TH8687"\w* son \w sac|strong="H8242"\w*, mais il ne les \w accepta|strong="H6901" x-morph="strongMorph:TH8765"\w* pas. 
\v 5 Alors \w Esther|strong="H635"\w* \w appela|strong="H7121" x-morph="strongMorph:TH8799"\w* \w Hathac|strong="H2047"\w*, l'un des \w eunuques|strong="H5631"\w* que le \w roi|strong="H4428"\w* avait \w placés|strong="H5975" x-morph="strongMorph:TH8689"\w* \w auprès|strong="H6440"\w* d'elle, et elle le \w chargea|strong="H6680" x-morph="strongMorph:TH8762"\w* d'aller \w demander|strong="H3045" x-morph="strongMorph:TH8800"\w* à \w Mardochée|strong="H4782"\w* ce que c'était et d'où cela venait. 

\s5
\v 6  \w Hathac|strong="H2047"\w* se \w rendit|strong="H3318" x-morph="strongMorph:TH8799"\w* vers \w Mardochée|strong="H4782"\w* sur la \w place|strong="H7339"\w* de la \w ville|strong="H5892"\w*, \w devant|strong="H6440"\w* la \w porte|strong="H8179"\w* du \w roi|strong="H4428"\w*. 
\v 7 Et \w Mardochée|strong="H4782"\w* lui \w raconta|strong="H5046" x-morph="strongMorph:TH8686"\w* tout ce qui lui était \w arrivé|strong="H7136" x-morph="strongMorph:TH8804"\w*, et lui indiqua la \w somme|strong="H6575"\w* d'\w argent|strong="H3701"\w* qu'\w Haman|strong="H2001"\w* avait \w promis|strong="H559" x-morph="strongMorph:TH8804"\w* de \w livrer|strong="H8254" x-morph="strongMorph:TH8800"\w* au \w trésor|strong="H1595"\w* du \w roi|strong="H4428"\w* en retour du \w massacre|strong="H6" x-morph="strongMorph:TH8763"\w* des \w Juifs|strong="H3064"\w*. 
\v 8 Il lui \w donna|strong="H5414" x-morph="strongMorph:TH8804"\w* aussi une \w copie|strong="H6572"\w* de l'\w édit|strong="H3791"\w*\w |strong="H1881"\w* \w publié|strong="H5414" x-morph="strongMorph:TH8738"\w* dans \w Suse|strong="H7800"\w* en vue de leur \w destruction|strong="H8045" x-morph="strongMorph:TH8687"\w*, afin qu'il le \w montrât|strong="H7200" x-morph="strongMorph:TH8687"\w* à \w Esther|strong="H635"\w* et lui fît tout \w connaître|strong="H5046" x-morph="strongMorph:TH8687"\w*; et il \w ordonna|strong="H6680" x-morph="strongMorph:TH8763"\w* qu'Esther se \w rendît|strong="H935" x-morph="strongMorph:TH8800"\w* chez le \w roi|strong="H4428"\w* pour lui demander \w grâce|strong="H2603" x-morph="strongMorph:TH8692"\w* et l'\w implorer|strong="H1245" x-morph="strongMorph:TH8763"\w* en \w faveur|strong="H6440"\w* de son \w peuple|strong="H5971"\w*. 

\s5
\v 9  \w Hathac|strong="H2047"\w* \w vint|strong="H935" x-morph="strongMorph:TH8799"\w* \w rapporter|strong="H5046" x-morph="strongMorph:TH8686"\w* à \w Esther|strong="H635"\w* les \w paroles|strong="H1697"\w* de \w Mardochée|strong="H4782"\w*. 
\v 10  \w Esther|strong="H635"\w* \w chargea|strong="H6680" x-morph="strongMorph:TH8762"\w* \w Hathac|strong="H2047"\w* d'aller \w dire|strong="H559" x-morph="strongMorph:TH8799"\w* à \w Mardochée|strong="H4782"\w*: 
\v 11 Tous les \w serviteurs|strong="H5650"\w* du \w roi|strong="H4428"\w* et le \w peuple|strong="H5971"\w* des \w provinces|strong="H4082"\w* du \w roi|strong="H4428"\w* \w savent|strong="H3045" x-morph="strongMorph:TH8802"\w* qu'il existe \w une|strong="H259"\w* \w loi|strong="H1881"\w* portant peine de \w mort|strong="H4191" x-morph="strongMorph:TH8687"\w* contre quiconque, \w homme|strong="H376"\w* ou \w femme|strong="H802"\w*, \w entre|strong="H935" x-morph="strongMorph:TH8799"\w* chez le \w roi|strong="H4428"\w*, dans la \w cour|strong="H2691"\w* \w intérieure|strong="H6442"\w*, sans avoir été \w appelé|strong="H7121" x-morph="strongMorph:TH8735"\w*; celui-là \w seul|strong="H905"\w* a la \w vie|strong="H2421" x-morph="strongMorph:TH8804"\w* sauve, à qui le \w roi|strong="H4428"\w* \w tend|strong="H3447" x-morph="strongMorph:TH8686"\w* le \w sceptre|strong="H8275"\w* d'\w or|strong="H2091"\w*. Et moi, je n'ai point été \w appelée|strong="H7121" x-morph="strongMorph:TH8738"\w*\w |strong="H935" x-morph="strongMorph:TH8800"\w* auprès du \w roi|strong="H4428"\w* depuis \w trente|strong="H7970"\w* \w jours|strong="H3117"\w*. 
\v 12 Lorsque les \w paroles|strong="H1697"\w* d'\w Esther|strong="H635"\w* eurent été \w rapportées|strong="H5046" x-morph="strongMorph:TH8686"\w* à \w Mardochée|strong="H4782"\w*, 

\s5
\v 13  \w Mardochée|strong="H4782"\w* \w fit|strong="H559" x-morph="strongMorph:TH8799"\w* \w répondre|strong="H7725" x-morph="strongMorph:TH8687"\w* à \w Esther|strong="H635"\w*: Ne t'\w imagine|strong="H1819" x-morph="strongMorph:TH8762"\w* pas que tu \w échapperas|strong="H4422" x-morph="strongMorph:TH8736"\w* \w seule|strong="H5315"\w* d'entre tous les \w Juifs|strong="H3064"\w*, parce que tu es dans la \w maison|strong="H1004"\w* du \w roi|strong="H4428"\w*; 
\v 14 car, si tu te \w tais|strong="H2790" x-morph="strongMorph:TH8687"\w*\w |strong="H2790" x-morph="strongMorph:TH8686"\w* \w maintenant|strong="H6256"\w*, le \w secours|strong="H7305"\w* et la \w délivrance|strong="H2020"\w* \w surgiront|strong="H5975" x-morph="strongMorph:TH8799"\w* d'\w autre|strong="H312"\w* \w part|strong="H4725"\w* pour les \w Juifs|strong="H3064"\w*, et toi et la \w maison|strong="H1004"\w* de ton \w père|strong="H1"\w* vous \w périrez|strong="H6" x-morph="strongMorph:TH8799"\w*. Et qui \w sait|strong="H3045" x-morph="strongMorph:TH8802"\w* si ce n'est pas pour un \w temps|strong="H6256"\w* comme celui-ci que tu es \w parvenue|strong="H5060" x-morph="strongMorph:TH8689"\w* à la \w royauté|strong="H4438"\w*? 

\s5
\v 15  \w Esther|strong="H635"\w* \w envoya|strong="H559" x-morph="strongMorph:TH8799"\w* \w dire|strong="H7725" x-morph="strongMorph:TH8687"\w* à \w Mardochée|strong="H4782"\w*: 
\v 16  \w Va|strong="H3212" x-morph="strongMorph:TH8798"\w*, \w rassemble|strong="H3664" x-morph="strongMorph:TH8798"\w* tous les \w Juifs|strong="H3064"\w* qui se \w trouvent|strong="H4672" x-morph="strongMorph:TH8737"\w* à \w Suse|strong="H7800"\w*, et \w jeûnez|strong="H6684" x-morph="strongMorph:TH8798"\w* pour moi, sans \w manger|strong="H398" x-morph="strongMorph:TH8799"\w* ni \w boire|strong="H8354" x-morph="strongMorph:TH8799"\w* pendant \w trois|strong="H7969"\w* \w jours|strong="H3117"\w*, ni la \w nuit|strong="H3915"\w* ni le \w jour|strong="H3117"\w*. Moi aussi, je \w jeûnerai|strong="H6684" x-morph="strongMorph:TH8799"\w* de \w même|strong="H3651"\w* avec mes \w servantes|strong="H5291"\w*, puis j'\w entrerai|strong="H935" x-morph="strongMorph:TH8799"\w* chez le \w roi|strong="H4428"\w*, malgré la \w loi|strong="H1881"\w*; et si je dois \w périr|strong="H6" x-morph="strongMorph:TH8804"\w*, je \w périrai|strong="H6" x-morph="strongMorph:TH8804"\w*. 
\v 17  \w Mardochée|strong="H4782"\w* s'en \w alla|strong="H5674" x-morph="strongMorph:TH8799"\w*, et \w fit|strong="H6213" x-morph="strongMorph:TH8799"\w* tout ce qu'\w Esther|strong="H635"\w* lui avait \w ordonné|strong="H6680" x-morph="strongMorph:TH8765"\w*. 

\s5
\c 5  
\p
\v 1 Le \w troisième|strong="H7992"\w* \w jour|strong="H3117"\w*, \w Esther|strong="H635"\w* \w mit|strong="H3847" x-morph="strongMorph:TH8799"\w* ses vêtements \w royaux|strong="H4438"\w* et se \w présenta|strong="H5975" x-morph="strongMorph:TH8799"\w* dans la \w cour|strong="H2691"\w* \w intérieure|strong="H6442"\w* de la \w maison|strong="H1004"\w* du \w roi|strong="H4428"\w*, \w devant|strong="H5227"\w* la \w maison|strong="H1004"\w* du \w roi|strong="H4428"\w*. Le \w roi|strong="H4428"\w* était \w assis|strong="H3427" x-morph="strongMorph:TH8802"\w* sur son \w trône|strong="H3678"\w* \w royal|strong="H4438"\w* dans la \w maison|strong="H1004"\w* \w royale|strong="H4438"\w*, en \w face|strong="H5227"\w* de l'\w entrée|strong="H6607"\w* de la \w maison|strong="H1004"\w*. 
\v 2 Lorsque le \w roi|strong="H4428"\w* \w vit|strong="H7200" x-morph="strongMorph:TH8800"\w* la \w reine|strong="H4436"\w* \w Esther|strong="H635"\w* \w debout|strong="H5975" x-morph="strongMorph:TH8802"\w* dans la \w cour|strong="H2691"\w*, elle \w trouva|strong="H5375" x-morph="strongMorph:TH8804"\w* \w grâce|strong="H2580"\w* à ses \w yeux|strong="H5869"\w*; et le \w roi|strong="H4428"\w* \w tendit|strong="H3447" x-morph="strongMorph:TH8686"\w* à \w Esther|strong="H635"\w* le \w sceptre|strong="H8275"\w* d'\w or|strong="H2091"\w* qu'il tenait à la \w main|strong="H3027"\w*. \w Esther|strong="H635"\w* s'\w approcha|strong="H7126" x-morph="strongMorph:TH8799"\w*, et \w toucha|strong="H5060" x-morph="strongMorph:TH8799"\w* le \w bout|strong="H7218"\w* du \w sceptre|strong="H8275"\w*. 

\s5
\v 3 Le \w roi|strong="H4428"\w* lui \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Qu'as-tu, \w reine|strong="H4436"\w* \w Esther|strong="H635"\w*, et que \w demandes|strong="H1246"\w*-tu? Quand ce serait la \w moitié|strong="H2677"\w* du \w royaume|strong="H4438"\w*, elle te serait \w donnée|strong="H5414" x-morph="strongMorph:TH8735"\w*. 
\v 4  \w Esther|strong="H635"\w* \w répondit|strong="H559" x-morph="strongMorph:TH8799"\w*: Si le \w roi|strong="H4428"\w* le trouve \w bon|strong="H2895" x-morph="strongMorph:TH8804"\w*, que le \w roi|strong="H4428"\w* \w vienne|strong="H935" x-morph="strongMorph:TH8799"\w* aujourd'\w hui|strong="H3117"\w* avec \w Haman|strong="H2001"\w* au \w festin|strong="H4960"\w* que je lui ai \w préparé|strong="H6213" x-morph="strongMorph:TH8804"\w*. 

\s5
\v 5 Et le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Allez tout de \w suite|strong="H4116" x-morph="strongMorph:TH8761"\w* chercher \w Haman|strong="H2001"\w*, comme le \w désire|strong="H6213" x-morph="strongMorph:TH8800"\w*\w |strong="H1697"\w* \w Esther|strong="H635"\w*. Le \w roi|strong="H4428"\w* se \w rendit|strong="H935" x-morph="strongMorph:TH8799"\w* avec \w Haman|strong="H2001"\w* au \w festin|strong="H4960"\w* qu'avait \w préparé|strong="H6213" x-morph="strongMorph:TH8804"\w* \w Esther|strong="H635"\w*. 
\v 6 Et pendant qu'on \w buvait|strong="H4960"\w* le \w vin|strong="H3196"\w*, le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* à \w Esther|strong="H635"\w*: Quelle est ta \w demande|strong="H7596"\w*? Elle te sera \w accordée|strong="H5414" x-morph="strongMorph:TH8735"\w*. Que \w désires|strong="H1246"\w*-tu? Quand ce serait la \w moitié|strong="H2677"\w* du \w royaume|strong="H4438"\w*, tu l'\w obtiendras|strong="H6213" x-morph="strongMorph:TH8735"\w*. 

\s5
\v 7  \w Esther|strong="H635"\w* \w répondit|strong="H6030" x-morph="strongMorph:TH8799"\w*\w |strong="H559" x-morph="strongMorph:TH8799"\w*: Voici ce que je \w demande|strong="H7596"\w* et ce que je \w désire|strong="H1246"\w*. 
\v 8 Si j'ai \w trouvé|strong="H4672" x-morph="strongMorph:TH8804"\w* \w grâce|strong="H2580"\w* aux \w yeux|strong="H5869"\w* du \w roi|strong="H4428"\w*, et s'il \w plaît|strong="H2895" x-morph="strongMorph:TH8804"\w* au \w roi|strong="H4428"\w* d'\w accorder|strong="H5414" x-morph="strongMorph:TH8800"\w* ma \w demande|strong="H7596"\w* et de \w satisfaire|strong="H6213" x-morph="strongMorph:TH8800"\w* mon \w désir|strong="H1246"\w*, que le \w roi|strong="H4428"\w* \w vienne|strong="H935" x-morph="strongMorph:TH8799"\w* avec \w Haman|strong="H2001"\w* au \w festin|strong="H4960"\w* que je leur \w préparerai|strong="H6213" x-morph="strongMorph:TH8799"\w*, et \w demain|strong="H4279"\w* je \w donnerai|strong="H6213" x-morph="strongMorph:TH8799"\w* réponse au \w roi|strong="H4428"\w* selon son \w ordre|strong="H1697"\w*. 

\s5
\v 9  \w Haman|strong="H2001"\w* \w sortit|strong="H3318" x-morph="strongMorph:TH8799"\w* ce \w jour|strong="H3117"\w*-là, \w joyeux|strong="H8056"\w* et le \w coeur|strong="H3820"\w* \w content|strong="H2896"\w*. Mais lorsqu'\w il|strong="H2001"\w* \w vit|strong="H7200" x-morph="strongMorph:TH8800"\w*, à la \w porte|strong="H8179"\w* du \w roi|strong="H4428"\w*, \w Mardochée|strong="H4782"\w* qui ne se \w levait|strong="H6965" x-morph="strongMorph:TH8804"\w* ni ne se \w remuait|strong="H2111" x-morph="strongMorph:TH8804"\w* devant lui, \w il|strong="H2001"\w* fut \w rempli|strong="H4390" x-morph="strongMorph:TH8735"\w* de \w colère|strong="H2534"\w* contre \w Mardochée|strong="H4782"\w*. 
\v 10  \w Il|strong="H2001"\w* sut néanmoins se \w contenir|strong="H662" x-morph="strongMorph:TH8691"\w*, et il \w alla|strong="H935" x-morph="strongMorph:TH8799"\w* \w chez|strong="H1004"\w* lui. Puis il \w envoya|strong="H7971" x-morph="strongMorph:TH8799"\w* \w chercher|strong="H935" x-morph="strongMorph:TH8686"\w* ses \w amis|strong="H157" x-morph="strongMorph:TH8802"\w* et \w Zéresch|strong="H2238"\w*, sa \w femme|strong="H802"\w*. 
\v 11  \w Haman|strong="H2001"\w* leur \w parla|strong="H5608" x-morph="strongMorph:TH8762"\w* de la \w magnificence|strong="H3519"\w* de ses \w richesses|strong="H6239"\w*, du \w nombre|strong="H7230"\w* de ses \w fils|strong="H1121"\w*, de tout ce qu'avait fait le \w roi|strong="H4428"\w* pour l'élever en \w dignité|strong="H1431" x-morph="strongMorph:TH8765"\w*, et du rang qu'il lui avait donné au-\w dessus|strong="H5375" x-morph="strongMorph:TH8765"\w* des \w chefs|strong="H8269"\w* et des \w serviteurs|strong="H5650"\w* du \w roi|strong="H4428"\w*. 

\s5
\v 12 Et \w il|strong="H2001"\w* \w ajouta|strong="H559" x-morph="strongMorph:TH8799"\w*: Je suis même le seul que la \w reine|strong="H4436"\w* \w Esther|strong="H635"\w* ait \w admis|strong="H935" x-morph="strongMorph:TH8689"\w* avec le \w roi|strong="H4428"\w* au \w festin|strong="H4960"\w* qu'elle a \w fait|strong="H6213" x-morph="strongMorph:TH8804"\w*, et je suis encore \w invité|strong="H7121" x-morph="strongMorph:TH8803"\w* pour \w demain|strong="H4279"\w* chez elle avec le \w roi|strong="H4428"\w*. 
\v 13 Mais tout cela n'est d'aucun \w prix|strong="H7737" x-morph="strongMorph:TH8802"\w* pour moi aussi \w longtemps|strong="H6256"\w* que je \w verrai|strong="H7200" x-morph="strongMorph:TH8802"\w* \w Mardochée|strong="H4782"\w*, le \w Juif|strong="H3064"\w*, \w assis|strong="H3427" x-morph="strongMorph:TH8802"\w* à la \w porte|strong="H8179"\w* du \w roi|strong="H4428"\w*. 

\s5
\v 14  \w Zéresch|strong="H2238"\w*, sa \w femme|strong="H802"\w*, et tous ses \w amis|strong="H157" x-morph="strongMorph:TH8802"\w* lui \w dirent|strong="H559" x-morph="strongMorph:TH8799"\w*: Qu'on \w prépare|strong="H6213" x-morph="strongMorph:TH8799"\w* un \w bois|strong="H6086"\w* \w haut|strong="H1364"\w* de \w cinquante|strong="H2572"\w* \w coudées|strong="H520"\w*, et \w demain|strong="H1242"\w* matin \w demande|strong="H559" x-morph="strongMorph:TH8798"\w* au \w roi|strong="H4428"\w* qu'on y \w pende|strong="H8518" x-morph="strongMorph:TH8799"\w* \w Mardochée|strong="H4782"\w*; puis tu \w iras|strong="H935" x-morph="strongMorph:TH8798"\w* \w joyeux|strong="H8056"\w* au \w festin|strong="H4960"\w* avec le \w roi|strong="H4428"\w*. Cet \w avis|strong="H1697"\w* \w plut|strong="H3190" x-morph="strongMorph:TH8799"\w* \w à|strong="H6440"\w* \w Haman|strong="H2001"\w*, et il fit \w préparer|strong="H6213" x-morph="strongMorph:TH8799"\w* le \w bois|strong="H6086"\w*. 

\s5
\c 6  
\p
\v 1 Cette \w nuit|strong="H3915"\w*-là, le \w roi|strong="H4428"\w* ne \w put|strong="H5074" x-morph="strongMorph:TH8804"\w* pas \w dormir|strong="H8142"\w*, et il se \w fit|strong="H559" x-morph="strongMorph:TH8799"\w* \w apporter|strong="H935" x-morph="strongMorph:TH8687"\w* le \w livre|strong="H5612"\w* des \w annales|strong="H2146"\w*, les \w Chroniques|strong="H1697"\w*\w |strong="H3117"\w*. On les \w lut|strong="H7121" x-morph="strongMorph:TH8737"\w* \w devant|strong="H6440"\w* le \w roi|strong="H4428"\w*, 
\v 2 et l'on \w trouva|strong="H4672" x-morph="strongMorph:TH8735"\w* \w écrit|strong="H3789" x-morph="strongMorph:TH8803"\w* ce que \w Mardochée|strong="H4782"\w* avait \w révélé|strong="H5046" x-morph="strongMorph:TH8689"\w* au sujet de \w Bigthan|strong="H904"\w* et de \w Théresch|strong="H8657"\w*, les \w deux|strong="H8147"\w* \w eunuques|strong="H5631"\w* du \w roi|strong="H4428"\w*, \w gardes|strong="H8104" x-morph="strongMorph:TH8802"\w* du \w seuil|strong="H5592"\w*, qui avaient \w voulu|strong="H1245" x-morph="strongMorph:TH8765"\w* \w porter|strong="H7971" x-morph="strongMorph:TH8800"\w* la \w main|strong="H3027"\w* sur le \w roi|strong="H4428"\w* \w Assuérus|strong="H325"\w*. 
\v 3 Le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Quelle marque de \w distinction|strong="H3366"\w* et d'\w honneur|strong="H1420"\w* \w Mardochée|strong="H4782"\w* a-t-il \w reçue|strong="H6213" x-morph="strongMorph:TH8738"\w* pour cela? Il n'a \w rien|strong="H1697"\w* \w reçu|strong="H6213" x-morph="strongMorph:TH8738"\w*, \w répondirent|strong="H559" x-morph="strongMorph:TH8799"\w* \w ceux|strong="H5288"\w* qui \w servaient|strong="H8334" x-morph="strongMorph:TH8764"\w* le \w roi|strong="H4428"\w*. 

\s5
\v 4 Alors le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Qui est dans la \w cour|strong="H2691"\w*? -\w Haman|strong="H2001"\w* était \w venu|strong="H935" x-morph="strongMorph:TH8804"\w* dans la \w cour|strong="H2691"\w* \w extérieure|strong="H2435"\w* de la \w maison|strong="H1004"\w* du \w roi|strong="H4428"\w*, pour \w demander|strong="H559" x-morph="strongMorph:TH8800"\w* au \w roi|strong="H4428"\w* de faire \w pendre|strong="H8518" x-morph="strongMorph:TH8800"\w* \w Mardochée|strong="H4782"\w* au \w bois|strong="H6086"\w* qu'il avait \w préparé|strong="H3559" x-morph="strongMorph:TH8689"\w* pour lui. - 
\v 5 Les \w serviteurs|strong="H5288"\w* du \w roi|strong="H4428"\w* lui \w répondirent|strong="H559" x-morph="strongMorph:TH8799"\w*: C'est \w Haman|strong="H2001"\w* qui se \w tient|strong="H5975" x-morph="strongMorph:TH8802"\w* dans la \w cour|strong="H2691"\w*. Et le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Qu'il \w entre|strong="H935" x-morph="strongMorph:TH8799"\w*. 
\v 6  \w Haman|strong="H2001"\w* \w entra|strong="H935" x-morph="strongMorph:TH8799"\w*, et le \w roi|strong="H4428"\w* lui \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Que faut-il \w faire|strong="H6213" x-morph="strongMorph:TH8800"\w* pour un \w homme|strong="H376"\w* que le \w roi|strong="H4428"\w* \w veut|strong="H2654" x-morph="strongMorph:TH8804"\w* \w honorer|strong="H3366"\w*? \w Haman|strong="H2001"\w* se \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* en lui-\w même|strong="H3820"\w*: Quel \w autre|strong="H3148"\w* que moi le \w roi|strong="H4428"\w* \w voudrait|strong="H2654" x-morph="strongMorph:TH8799"\w*-il \w honorer|strong="H6213" x-morph="strongMorph:TH8800"\w*\w |strong="H3366"\w*? 

\s5
\v 7 Et \w Haman|strong="H2001"\w* \w répondit|strong="H559" x-morph="strongMorph:TH8799"\w* au \w roi|strong="H4428"\w*: Pour un \w homme|strong="H376"\w* que le \w roi|strong="H4428"\w* \w veut|strong="H2654" x-morph="strongMorph:TH8804"\w* \w honorer|strong="H3366"\w*, 
\v 8 il faut \w prendre|strong="H935" x-morph="strongMorph:TH8686"\w* le \w vêtement|strong="H3830"\w* \w royal|strong="H4438"\w* dont le \w roi|strong="H4428"\w* se \w couvre|strong="H3847" x-morph="strongMorph:TH8804"\w* et le \w cheval|strong="H5483"\w* que le \w roi|strong="H4428"\w* \w monte|strong="H7392" x-morph="strongMorph:TH8804"\w* et sur la \w tête|strong="H7218"\w* duquel se \w pose|strong="H5414" x-morph="strongMorph:TH8738"\w* une \w couronne|strong="H3804"\w* \w royale|strong="H4438"\w*, 
\v 9  \w remettre|strong="H5414" x-morph="strongMorph:TH8800"\w* le \w vêtement|strong="H3830"\w* et le \w cheval|strong="H5483"\w* à l'\w un|strong="H3027"\w*\w |strong="H376"\w* des \w principaux|strong="H6579"\w* \w chefs|strong="H8269"\w* du \w roi|strong="H4428"\w*, puis \w revêtir|strong="H3847" x-morph="strongMorph:TH8689"\w* l'\w homme|strong="H376"\w* que le \w roi|strong="H4428"\w* \w veut|strong="H2654" x-morph="strongMorph:TH8804"\w* \w honorer|strong="H3366"\w*, le \w promener|strong="H7392" x-morph="strongMorph:TH8689"\w* à \w cheval|strong="H5483"\w* à travers la \w place|strong="H7339"\w* de la \w ville|strong="H5892"\w*, et \w crier|strong="H7121" x-morph="strongMorph:TH8804"\w* \w devant|strong="H6440"\w* lui: C'est ainsi que l'on \w fait|strong="H6213" x-morph="strongMorph:TH8735"\w* à l'\w homme|strong="H376"\w* que le \w roi|strong="H4428"\w* \w veut|strong="H2654" x-morph="strongMorph:TH8804"\w* \w honorer|strong="H3366"\w*! 

\s5
\v 10 Le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* à \w Haman|strong="H2001"\w*: \w Prends|strong="H3947" x-morph="strongMorph:TH8798"\w* tout de \w suite|strong="H4116" x-morph="strongMorph:TH8761"\w* le \w vêtement|strong="H3830"\w* et le \w cheval|strong="H5483"\w*, comme tu l'as \w dit|strong="H1696" x-morph="strongMorph:TH8765"\w*, et \w fais|strong="H6213" x-morph="strongMorph:TH8798"\w* ainsi pour \w Mardochée|strong="H4782"\w*, le \w Juif|strong="H3064"\w*, qui est \w assis|strong="H3427" x-morph="strongMorph:TH8802"\w* à la \w porte|strong="H8179"\w* du \w roi|strong="H4428"\w*; ne \w néglige|strong="H5307" x-morph="strongMorph:TH8686"\w* \w rien|strong="H1697"\w* de tout ce que tu as \w mentionné|strong="H1696" x-morph="strongMorph:TH8765"\w*. 
\v 11 Et \w Haman|strong="H2001"\w* \w prit|strong="H3947" x-morph="strongMorph:TH8799"\w* le \w vêtement|strong="H3830"\w* et le \w cheval|strong="H5483"\w*, il \w revêtit|strong="H3847" x-morph="strongMorph:TH8686"\w* \w Mardochée|strong="H4782"\w*, il le promena à \w cheval|strong="H7392" x-morph="strongMorph:TH8686"\w* à travers la \w place|strong="H7339"\w* de la \w ville|strong="H5892"\w*, et il \w cria|strong="H7121" x-morph="strongMorph:TH8799"\w* \w devant|strong="H6440"\w* lui: C'est ainsi que l'on \w fait|strong="H6213" x-morph="strongMorph:TH8735"\w* à l'\w homme|strong="H376"\w* que le \w roi|strong="H4428"\w* \w veut|strong="H2654" x-morph="strongMorph:TH8804"\w* \w honorer|strong="H3366"\w*! 

\s5
\v 12  \w Mardochée|strong="H4782"\w* \w retourna|strong="H7725" x-morph="strongMorph:TH8799"\w* à la \w porte|strong="H8179"\w* du \w roi|strong="H4428"\w*, et \w Haman|strong="H2001"\w* se rendit en \w hâte|strong="H1765" x-morph="strongMorph:TH8738"\w* chez \w lui|strong="H1004"\w*, \w désolé|strong="H57"\w* et la \w tête|strong="H7218"\w* \w voilée|strong="H2645" x-morph="strongMorph:TH8802"\w*. 
\v 13  \w Haman|strong="H2001"\w* \w raconta|strong="H5608" x-morph="strongMorph:TH8762"\w* à \w Zéresch|strong="H2238"\w*, sa \w femme|strong="H802"\w*, et à tous ses \w amis|strong="H157" x-morph="strongMorph:TH8802"\w*, tout ce qui lui était \w arrivé|strong="H7136" x-morph="strongMorph:TH8804"\w*. Et ses \w sages|strong="H2450"\w*, et \w Zéresch|strong="H2238"\w*, sa \w femme|strong="H802"\w*, lui \w dirent|strong="H559" x-morph="strongMorph:TH8799"\w*: Si \w Mardochée|strong="H4782"\w*, \w devant|strong="H6440"\w* lequel tu as \w commencé|strong="H2490" x-morph="strongMorph:TH8689"\w* de \w tomber|strong="H5307" x-morph="strongMorph:TH8800"\w*, est de la \w race|strong="H2233"\w* des \w Juifs|strong="H3064"\w*, tu ne pourras \w rien|strong="H3201" x-morph="strongMorph:TH8799"\w* contre lui, mais tu \w tomberas|strong="H5307" x-morph="strongMorph:TH8800"\w*\w |strong="H5307" x-morph="strongMorph:TH8799"\w* \w devant|strong="H6440"\w* lui. 
\v 14 Comme ils lui \w parlaient|strong="H1696" x-morph="strongMorph:TH8764"\w* encore, les \w eunuques|strong="H5631"\w* du \w roi|strong="H4428"\w* \w arrivèrent|strong="H5060" x-morph="strongMorph:TH8689"\w* et \w conduisirent|strong="H935" x-morph="strongMorph:TH8687"\w* \w aussitôt|strong="H926" x-morph="strongMorph:TH8686"\w* \w Haman|strong="H2001"\w* au \w festin|strong="H4960"\w* qu'\w Esther|strong="H635"\w* avait \w préparé|strong="H6213" x-morph="strongMorph:TH8804"\w*. 

\s5
\c 7  
\p
\v 1 Le \w roi|strong="H4428"\w* et \w Haman|strong="H2001"\w* \w allèrent|strong="H935" x-morph="strongMorph:TH8799"\w* au \w festin|strong="H8354" x-morph="strongMorph:TH8800"\w* chez la \w reine|strong="H4436"\w* \w Esther|strong="H635"\w*. 
\v 2 Ce \w second|strong="H8145"\w* \w jour|strong="H3117"\w*, le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* encore à \w Esther|strong="H635"\w*, pendant qu'on \w buvait|strong="H4960"\w* le \w vin|strong="H3196"\w*: Quelle est ta \w demande|strong="H7596"\w*, \w reine|strong="H4436"\w* \w Esther|strong="H635"\w*? Elle te sera \w accordée|strong="H5414" x-morph="strongMorph:TH8735"\w*. Que \w désires|strong="H1246"\w*-tu? Quand ce serait la \w moitié|strong="H2677"\w* du \w royaume|strong="H4438"\w*, tu l'\w obtiendras|strong="H6213" x-morph="strongMorph:TH8735"\w*. 

\s5
\v 3 La \w reine|strong="H4436"\w* \w Esther|strong="H635"\w* \w répondit|strong="H6030" x-morph="strongMorph:TH8799"\w*\w |strong="H559" x-morph="strongMorph:TH8799"\w*: Si j'ai \w trouvé|strong="H4672" x-morph="strongMorph:TH8804"\w* \w grâce|strong="H2580"\w* à tes \w yeux|strong="H5869"\w*, ô \w roi|strong="H4428"\w*, et si le \w roi|strong="H4428"\w* le trouve \w bon|strong="H2895" x-morph="strongMorph:TH8804"\w*, \w accorde|strong="H5414" x-morph="strongMorph:TH8735"\w*-moi la \w vie|strong="H5315"\w*, voilà ma \w demande|strong="H7596"\w*, et sauve mon \w peuple|strong="H5971"\w*, voilà mon \w désir|strong="H1246"\w*! 
\v 4 Car nous sommes \w vendus|strong="H4376" x-morph="strongMorph:TH8738"\w*, moi et mon \w peuple|strong="H5971"\w*, pour être \w détruits|strong="H8045" x-morph="strongMorph:TH8687"\w*, \w égorgés|strong="H2026" x-morph="strongMorph:TH8800"\w*, \w anéantis|strong="H6" x-morph="strongMorph:TH8763"\w*. Encore \w si|strong="H432"\w* nous étions \w vendus|strong="H4376" x-morph="strongMorph:TH8738"\w* pour devenir \w esclaves|strong="H5650"\w* et \w servantes|strong="H8198"\w*, je me \w tairais|strong="H2790" x-morph="strongMorph:TH8689"\w*, mais l'\w ennemi|strong="H6862"\w* ne saurait \w compenser|strong="H7737" x-morph="strongMorph:TH8802"\w* le \w dommage|strong="H5143"\w* fait au \w roi|strong="H4428"\w*. 
\v 5 Le \w roi|strong="H4428"\w* \w Assuérus|strong="H325"\w* prit la \w parole|strong="H559" x-morph="strongMorph:TH8799"\w* et \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* à la \w reine|strong="H4436"\w* \w Esther|strong="H635"\w*: Qui est-il et où est-il celui qui se \w propose|strong="H4390" x-morph="strongMorph:TH8804"\w*\w |strong="H3820"\w* d'\w agir|strong="H6213" x-morph="strongMorph:TH8800"\w* ainsi? 

\s5
\v 6  \w Esther|strong="H635"\w* \w répondit|strong="H559" x-morph="strongMorph:TH8799"\w*: L'\w oppresseur|strong="H376"\w*\w |strong="H6862"\w*, l'\w ennemi|strong="H341" x-morph="strongMorph:TH8802"\w*, c'est \w Haman|strong="H2001"\w*, ce \w méchant|strong="H7451"\w*-là! \w Haman|strong="H2001"\w* fut saisi de \w terreur|strong="H1204" x-morph="strongMorph:TH8738"\w* en \w présence|strong="H6440"\w* du \w roi|strong="H4428"\w* et de la \w reine|strong="H4436"\w*. 
\v 7 Et le \w roi|strong="H4428"\w*, dans sa \w colère|strong="H2534"\w*, se \w leva|strong="H6965" x-morph="strongMorph:TH8804"\w* et quitta le \w festin|strong="H4960"\w*\w |strong="H3196"\w*, pour aller dans le \w jardin|strong="H1594"\w* du \w palais|strong="H1055"\w*. \w Haman|strong="H2001"\w* \w resta|strong="H5975" x-morph="strongMorph:TH8804"\w* pour \w demander|strong="H1245" x-morph="strongMorph:TH8763"\w* grâce de la \w vie|strong="H5315"\w* à la \w reine|strong="H4436"\w* \w Esther|strong="H635"\w*, car il \w voyait|strong="H7200" x-morph="strongMorph:TH8804"\w* bien que sa \w perte|strong="H7451"\w* était \w arrêtée|strong="H3615" x-morph="strongMorph:TH8804"\w* dans l'esprit du \w roi|strong="H4428"\w*. 

\s5
\v 8 Lorsque le \w roi|strong="H4428"\w* \w revint|strong="H7725" x-morph="strongMorph:TH8804"\w* du \w jardin|strong="H1594"\w* du \w palais|strong="H1055"\w* dans la \w salle|strong="H1004"\w* du \w festin|strong="H4960"\w*\w |strong="H3196"\w*, il vit \w Haman|strong="H2001"\w* qui s'était \w précipité|strong="H5307" x-morph="strongMorph:TH8802"\w* vers le \w lit|strong="H4296"\w* sur lequel était \w Esther|strong="H635"\w*, et \w il|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Serait-ce encore pour faire \w violence|strong="H3533" x-morph="strongMorph:TH8800"\w* à la \w reine|strong="H4436"\w*, chez moi, dans le \w palais|strong="H1004"\w*? Dès que cette \w parole|strong="H1697"\w* fut \w sortie|strong="H3318" x-morph="strongMorph:TH8804"\w* de la \w bouche|strong="H6310"\w* du \w roi|strong="H4428"\w*, on \w voila|strong="H2645" x-morph="strongMorph:TH8804"\w* le \w visage|strong="H6440"\w* d'\w Haman|strong="H2001"\w*. 

\s5
\v 9 Et \w Harbona|strong="H2726"\w*, l'\w un|strong="H259"\w* des \w eunuques|strong="H5631"\w*, \w dit|strong="H559" x-morph="strongMorph:TH8799"\w* en \w présence|strong="H6440"\w* du \w roi|strong="H4428"\w*: Voici, le \w bois|strong="H6086"\w* \w préparé|strong="H6213" x-morph="strongMorph:TH8804"\w* par \w Haman|strong="H2001"\w* pour \w Mardochée|strong="H4782"\w*, qui a \w parlé|strong="H1696" x-morph="strongMorph:TH8765"\w* pour le \w bien|strong="H2896"\w* du \w roi|strong="H4428"\w*, est \w dressé|strong="H5975" x-morph="strongMorph:TH8802"\w* dans la \w maison|strong="H1004"\w* d'\w Haman|strong="H2001"\w*, à une \w hauteur|strong="H1364"\w* de \w cinquante|strong="H2572"\w* \w coudées|strong="H520"\w*. Le \w roi|strong="H4428"\w* \w dit|strong="H559" x-morph="strongMorph:TH8799"\w*: Qu'on y \w pende|strong="H8518" x-morph="strongMorph:TH8798"\w* Haman! 
\v 10 Et l'on \w pendit|strong="H8518" x-morph="strongMorph:TH8799"\w* \w Haman|strong="H2001"\w* au \w bois|strong="H6086"\w* qu'il avait \w préparé|strong="H3559" x-morph="strongMorph:TH8689"\w* pour \w Mardochée|strong="H4782"\w*. Et la \w colère|strong="H2534"\w* du \w roi|strong="H4428"\w* s'\w apaisa|strong="H7918" x-morph="strongMorph:TH8804"\w*. 

\s5
\c 8  
\p
\v 1 En ce même \w jour|strong="H3117"\w*, le \w roi|strong="H4428"\w* \w Assuérus|strong="H325"\w* \w donna|strong="H5414" x-morph="strongMorph:TH8804"\w* à la \w reine|strong="H4436"\w* \w Esther|strong="H635"\w* la \w maison|strong="H1004"\w* d'\w Haman|strong="H2001"\w*, l'\w ennemi|strong="H6887" x-morph="strongMorph:TH8802"\w* des \w Juifs|strong="H3064"\w*; et \w Mardochée|strong="H4782"\w* \w parut|strong="H935" x-morph="strongMorph:TH8804"\w* \w devant|strong="H6440"\w* le \w roi|strong="H4428"\w*, car \w Esther|strong="H635"\w* avait fait \w connaître|strong="H5046" x-morph="strongMorph:TH8689"\w* la parenté qui l'unissait à elle. 
\v 2 Le \w roi|strong="H4428"\w* \w ôta|strong="H5493" x-morph="strongMorph:TH8686"\w* son \w anneau|strong="H2885"\w*, qu'il avait \w repris|strong="H5674" x-morph="strongMorph:TH8689"\w* à \w Haman|strong="H2001"\w*, et le \w donna|strong="H5414" x-morph="strongMorph:TH8799"\w* à \w Mardochée|strong="H4782"\w*; \w Esther|strong="H635"\w*, de son côté, \w établit|strong="H7760" x-morph="strongMorph:TH8799"\w* \w Mardochée|strong="H4782"\w* sur la \w maison|strong="H1004"\w* d'\w Haman|strong="H2001"\w*. 

\s5
\v 3 Puis \w Esther|strong="H635"\w* \w parla|strong="H1696" x-morph="strongMorph:TH8762"\w* de \w nouveau|strong="H3254" x-morph="strongMorph:TH8686"\w* en \w présence|strong="H6440"\w* du \w roi|strong="H4428"\w*. Elle se \w jeta|strong="H5307" x-morph="strongMorph:TH8799"\w* \w à|strong="H6440"\w* ses \w pieds|strong="H7272"\w*, elle \w pleura|strong="H1058" x-morph="strongMorph:TH8799"\w*, elle le \w supplia|strong="H2603" x-morph="strongMorph:TH8691"\w* d'\w empêcher|strong="H5674" x-morph="strongMorph:TH8687"\w* les effets de la \w méchanceté|strong="H7451"\w* d'\w Haman|strong="H2001"\w*, l'\w Agaguite|strong="H91"\w*, et la réussite de ses \w projets|strong="H4284"\w*\w |strong="H2803" x-morph="strongMorph:TH8804"\w* contre les \w Juifs|strong="H3064"\w*. 
\v 4 Le \w roi|strong="H4428"\w* \w tendit|strong="H3447" x-morph="strongMorph:TH8686"\w* le \w sceptre|strong="H8275"\w* d'\w or|strong="H2091"\w* à \w Esther|strong="H635"\w*,\w |strong="H635"\w* qui se \w releva|strong="H6965" x-morph="strongMorph:TH8799"\w* et resta \w debout|strong="H5975" x-morph="strongMorph:TH8799"\w* \w devant|strong="H6440"\w* le \w roi|strong="H4428"\w*. 

\s5
